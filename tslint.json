{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "semicolon": false,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false,
    "no-var-requires": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ]
  }
}
